<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical">
            <WrapPanel Orientation="Horizontal">
                <Label Margin="0,0,10,0">Salaris</Label>
                <TextBox Margin="0,2,10,2" x:Name="salarisTxtBox" Width="100"></TextBox>
                <Button Margin="0,2,10,2" Width="100"  Name="updateBtn" Click="updateBtn_Click">Update</Button>
            </WrapPanel>
            <ListBox SelectionChanged="resultListbox_SelectionChanged" Name="resultListbox" Width="200" Height="250" Margin="0,80,0,0">
               
                
            </ListBox >

            <Label Name="errorLabel" HorizontalAlignment="Left" Width="200" VerticalAlignment="Bottom" Margin="0,100,0,0"></Label>
            
        </StackPanel>
    </Grid>
</Window>
